#!/bin/java bsh.Interpreter

source("TestHarness.bsh");
source("Assert.bsh");

// from Java tutorial Enum Types
// https://docs.oracle.com/javase/tutorial/java/javaOO/enum.html
public enum Planet {
    MERCURY (3.303e+23, 2.4397e6),
    VENUS   (4.869e+24, 6.0518e6),
    EARTH   (5.976e+24, 6.37814e6),
    MARS    (6.421e+23, 3.3972e6),
    JUPITER (1.9e+27,   7.1492e7),
    SATURN  (5.688e+26, 6.0268e7),
    URANUS  (8.686e+25, 2.5559e7),
    NEPTUNE (1.024e+26, 2.4746e7);

    private final double mass;   // in kilograms
    private final double radius; // in meters
    Planet(double mass, double radius) {
        this.mass = mass;
        this.radius = radius;
    }
    private double mass() { return mass; }
    private double radius() { return radius; }

    // universal gravitational constant  (m3 kg-1 s-2)
    public static final double G = 6.67300E-11;

    double surfaceGravity() {
        return G * mass / (radius * radius);
    }
    double surfaceWeight(double otherMass) {
        return otherMass * surfaceGravity();
    }

    public static double yourWeightOn(Planet p, double earthWeight) {
        double mass = earthWeight/EARTH.surfaceGravity();
        return p.surfaceWeight(mass);
    }
}

assertEquals("Your weight on MERCURY is 66.107583", 66.107583, Planet.yourWeightOn(Planet.MERCURY, 175), 0.0001);
assertEquals("Your weight on VENUS is 158.374842", 158.374842, Planet.yourWeightOn(Planet.VENUS, 175), 0.0001);
assertEquals("Your weight on EARTH is 175.000000", 175.000000, Planet.yourWeightOn(Planet.EARTH, 175), 0.0001);
assertEquals("Your weight on MARS is 66.279007", 66.279007, Planet.yourWeightOn(Planet.MARS, 175), 0.0001);
assertEquals("Your weight on JUPITER is 442.847567", 442.847567, Planet.yourWeightOn(Planet.JUPITER, 175), 0.0001);
assertEquals("Your weight on SATURN is 186.552719", 186.552719, Planet.yourWeightOn(Planet.SATURN, 175), 0.0001);
assertEquals("Your weight on URANUS is 158.397260", 158.397260, Planet.yourWeightOn(Planet.URANUS, 175), 0.0001);
assertEquals("Your weight on NEPTUNE is 199.207413", 199.207413, Planet.yourWeightOn(Planet.NEPTUNE, 175), 0.0001);

complete();

